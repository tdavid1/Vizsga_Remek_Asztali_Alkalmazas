<Window x:Class="Vizsga_Remek_Asztali_Alkalmazas.ProductsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vizsga_Remek_Asztali_Alkalmazas"
        mc:Ignorable="d"
        Title="ProductsForm" Height="400" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Background="#eff2f7">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="text_cim" Grid.ColumnSpan="2" Text="Termék Hozzáadása" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button x:Name="add_btn" Click="add_products" Grid.ColumnSpan="2" Grid.Row="6" Margin="0" HorizontalAlignment="Center" Style="{StaticResource addButton}" Content="Termék Hozzáadása"/>
            <Button x:Name="mod_btn" Click="modify" Visibility="Collapsed" Grid.ColumnSpan="2" Grid.Row="6" Margin="0" HorizontalAlignment="Center" Style="{StaticResource addButton}" Content="Termék Modositása"/>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" x:Name="add_name" Width="140"/>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" x:Name="add_price" Width="140"/>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" x:Name="add_desc" Width="140"/>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" x:Name="add_spectype" Width="140"/>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="5" TextWrapping="Wrap" x:Name="add_type" Width="140"/>
            
            <Label Grid.Row="1" Content="Termék neve:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20"/>
            <Label Grid.Row="2" Content="Termék Ára:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20"/>
            <Label Grid.Row="3" Content="Termék Leírása:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20"/>
            <Label Grid.Row="4" Content="Specifikus Típus:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20"/>
            <Label Grid.Row="5" Content="Típus:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20"/>
        </Grid>
    </Border>
</Window>
